{
  "name": "server",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "tsx watch ./src/app.ts",
    "build": "rimraf ./dist && tsc --skipLibCheck && tsc-alias",
    "start": "node ./dist/src/app.js",
    "type-check": "tsc --noEmit --skipLibCheck",
    "init": "ts-patch install -s",
    "lint": "eslint --fix",
    "format": "npx prettier --write .",
    "check": "eslint --fix && npx prettier --write . && tsc --noEmit --skipLibCheck",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx ./src/db/seed.ts",
    "db:reset": "tsx ./src/db/reset.ts",
    "db:populate": "tsx ./src/db/populate.ts",
    "db:studio": "npx drizzle-kit studio"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/bcryptjs": "2.4.6",
    "@types/big.js": "6.2.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.31.5",
    "eslint-config-love": "^133.0.0",
    "prettier": "^3.6.2",
    "rimraf": "6.0.1",
    "ts-patch": "3.3.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-transform-paths": "^3.5.5"
  },
  "dependencies": {
    "bcryptjs": "^3.0.0",
    "big.js": "^7.0.1",
    "cookie": "1.0.2",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-seed": "0.3.1",
    "env-var": "^7.5.0",
    "exceljs": "4.4.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.13.3",
    "sharp": "^0.34.4",
    "zod": "^4.1.12"
  }
}
